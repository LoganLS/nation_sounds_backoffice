{% extends 'base.html.twig' %}

{% block title %}FAQ{% endblock %}

{% block body %}
    <a href="{{path('new_faq')}}">Ajouter une question / réponse</a>
    <h1>La FAQ</h1>
    <table>
        <thead>
            <tr>
                <td>Question</td>
                <td>Réponse</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for faq in faqs %}
                <tr>
                    <td>{{faq.question}}</td>
                    <td>{{faq.answer}}</td>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <a href="{{ path('faq',{'id': faq.id}) }}">DETAIL</a>
                                </td>
                                <td>
                                    <a href="{{ path('update_faq',{'id':faq.id}) }}">MODIFIER</a>
                                </td>
                                <td>
                                    <a href="{{ path('delete_faq',{'id':faq.id}) }}">SUPPRIMER</a>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
