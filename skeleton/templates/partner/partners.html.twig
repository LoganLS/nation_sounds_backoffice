{% extends 'base.html.twig' %}

{% block title %}Partenaire{% endblock %}

{% block body %}
    <a href="{{path('new_partner')}}">Ajouter un partenaire</a>
    <h1>Les partenaires</h1>
    <table>
        <thead>
            <tr>
                <td>Partenaire</td>
                <td>URL</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for partner in partners %}
                <tr>
                    <td>{{partner.label}}</td>
                    <td>{{partner.url}}</td>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <a href="{{ path('partner',{'id': partner.id}) }}">DETAIL</a>
                                </td>
                                <td>
                                    <a href="{{ path('update_partner',{'id':partner.id}) }}">MODIFIER</a>
                                </td>
                                <td>
                                    <a href="{{ path('delete_partner',{'id':partner.id}) }}">SUPPRIMER</a>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
